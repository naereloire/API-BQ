  "securityDefinitions": {},
  "consumes": [],
  "produces": [],
  "paths": {
    "/users/": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Essa rota realiza consulta, de todos os usuários na base de dados.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Usuários encontrados."
          },
          "400": {
            "description": "Requisição Inválida."
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Essa rota realiza consulta, de usuários na base de dados por **_id_**.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário Encontrado."
          },
          "400": {
            "description": "Requisição Inválida."
          },
          "404": {
            "description": "Usuário não Encontrado."
          }
        }
      }
    },
    "/user/add": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Essa rota realiza criação de novo usuário, na base de dados conforme **_newUser_**.",
        "parameters": [
          {
            "name": "newUser",
            "in": "body",
            "description": "Informações do usuário.",
            "required": true,
            "type": "object",
            "schema": {
              "$ref": "#/definitions/AddUser"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário Criado."
          },
          "400": {
            "description": "Requisição Inválida."
          }
        }
      }
    },
    "/users/update/{id}": {
      "put": {
        "tags": [
          "Users"
        ],
        "description": "Essa rota realiza atualização, de informações do usuário na base de dados.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário Atualizado."
          },
          "400": {
            "description": "Requisição Inválida."
          },
          "404": {
            "description": "Usuário não Encontrado."
          }
        }
      }
    },
    "/menus/": {
      "get": {
        "tags": [
          "Menus"
        ],
        "description": "Essa rota realiza consulta, de todos os menus na base de dados.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Menus encontrados."
          },
          "400": {
            "description": "Requisição Inválida."
          }
        }
      }
    },
    "/menus/{menu}": {
      "get": {
        "tags": [
          "Menus"
        ],
        "description": "Essa rota realiza consulta, de um menu na base de dados por **_nº do menu_ que é diferente do **_id_**.",
        "parameters": [
          {
            "name": "menu",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Menu Encontrado."
          },
          "400": {
            "description": "Requisição Inválida."
          },
          "404": {
            "description": "Menu não Encontrado."
          }
        }
      }
    },
    "/menu/item/add": {
      "post": {
        "tags": [
          "Menus"
        ],
        "description": "Essa rota realiza criação de novo item, no menu conforme **_newItem:_**",
        "parameters": [
          {
            "name": "newItem",
            "in": "body",
            "description": "Informações do Item.",
            "required": true,
            "type": "object",
            "schema": {
              "$ref": "#/definitions/AddItem"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Item Criado."
          },
          "400": {
            "description": "Requisição Inválida."
          }
        }
      }
    },
    "/menu/item/update/{id}": {
      "put": {
        "tags": [
          "Menus"
        ],
        "description": "Essa rota realiza atualização, de informações do item no menu através do **_id_**, conforme updateItem:.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          },
          {
            "name": "updateItem",
            "in": "body",
            "description": "Informações do Item.",
            "required": true,
            "type": "object",
            "schema": {
              "type": "object",
              "properties": {
                "price": {
                  "type": "number",
                  "example": 100
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Item Atualizado."
          },
          "400": {
            "description": "Requisição Inválida."
          },
          "404": {
            "description": "Item não Encontrado."
          }
        }
      }
    },
    "/menu/item/{id}": {
      "delete": {
        "tags": [
          "Menus"
        ],
        "description": "Essa rota realiza exclusão de um intem do menu.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Item Exluído."
          },
          "400": {
            "description": "Requisição Inválida."
          },
          "404": {
            "description": "Item não Encontrado."
          }
        }
      }
    },
    "/orders/": {
      "get": {
        "tags": [
          "Orders"
        ],
        "description": "Essa rota realiza consulta, de todos os pedidos na base de dados.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Pedidos encontrados."
          },
          "400": {
            "description": "Requisição Inválida."
          }
        }
      }
    },
    "/orders/{id}": {
      "get": {
        "tags": [
          "Orders"
        ],
        "description": "Essa rota realiza consulta, de um pedido na base de dados através do **_id_** .",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Pedido Encontrado."
          },
          "400": {
            "description": "Requisição Inválida."
          },
          "404": {
            "description": "Pedido não Encontrado."
          }
        }
      }
    },
    "/order/add": {
      "post": {
        "tags": [
          "Orders"
        ],
        "description": "Essa rota realiza criação, de um novo pedido na base de dados conforme **_newOrder_**.",
        "parameters": [
          {
            "name": "newOrder",
            "in": "body",
            "description": "Informações do Pedido.",
            "required": true,
            "type": "object",
            "schema": {
              "$ref": "#/definitions/AddOrder"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Pedido Criado."
          },
          "400": {
            "description": "Requisição Inválida."
          }
        }
      }
    },
    "/order/status/update/{id}": {
      "put": {
        "tags": [
          "Orders"
        ],
        "description": "Essa rota realiza Atualização, de status em um pedido através do **_id_** conforme **_updateStatus_**.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          },
          {
            "name": "updateStatus",
            "in": "body",
            "description": "Alteração de Status.",
            "required": true,
            "type": "object",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "Concluído"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status Atualizado."
          },
          "400": {
            "description": "Requisição Inválida."
          },
          "404": {
            "description": "Pedido não Encontrado."
          }
        }
      }
    },
    "/ordersItens/order/{orderId}": {
      "get": {
        "tags": [
          "Orders Itens"
        ],
        "description": "Essa rota realiza consulta, de todos os itens de um pedido específico na base de dados.",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Itens do pedido não encontrados."
          },
          "400": {
            "description": "Requisição Inválida."
          }
        }
      }
    },
    "/ordersItens/{id}": {
      "get": {
        "tags": [
          "Orders Itens"
        ],
        "description": "Essa rota realiza consulta, de um item em um pedido através do **_id_**.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Item do pedido Encontrado."
          },
          "400": {
            "description": "Requisição Inválida."
          },
          "404": {
            "description": "Item do pedido não Encontrado."
          }
        }
      },
      "delete": {
        "tags": [
          "Orders Itens"
        ],
        "description": "Essa rota realiza exclusão, de um item em um pedido.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Item do pedido Excluído."
          },
          "400": {
            "description": "Requisição Inválida."
          },
          "404": {
            "description": "Item do pedido não Encontrado."
          }
        }
      }
    },
    "/ordersItens/add": {
      "post": {
        "tags": [
          "Orders Itens"
        ],
        "description": "Essa rota realiza criação, de um item à um pedido conforme **_newItem:_**.",
        "parameters": [
          {
            "name": "newItem",
            "in": "body",
            "description": "Informações do Item.",
            "required": true,
            "type": "object",
            "schema": {
              "$ref": "#/definitions/AddItemCount"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Item Criado."
          },
          "400": {
            "description": "Requisição Inválida."
          }
        }
      }
    },
    "/order/update/count/{id}": {
      "put": {
        "tags": [
          "Orders Itens"
        ],
        "description": "Essa rota realiza atualização, na quantidade de item em um pedido conforme **_updateItemCount:_**.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          },
          {
            "name": "updateItemCount",
            "in": "body",
            "description": "Alteração de quantidade do item.",
            "required": true,
            "type": "object",
            "schema": {
              "type": "object",
              "properties": {
                "count": {
                  "type": "number",
                  "example": 2
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Quantidade Atualizada."
          },
          "400": {
            "description": "Requisição Inválida."
          },
          "404": {
            "description": "Item não Encontrado."
          }
        }
      }
    }
  },
  "definitions": {
    "AddUser": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Julia"
        },
        "email": {
          "type": "string",
          "example": "julia@julia"
        },
        "sector": {
          "type": "string",
          "example": "salon"
        }
      },
      "xml": {
        "name": "AddUser"
      }
    },
    "AddItem": {
      "type": "object",
      "properties": {
        "item": {
          "type": "string",
          "example": "Queijo"
        },
        "menu": {
          "type": "number",
          "example": 2
        },
        "price": {
          "type": "number",
          "example": 3
        },
        "type": {
          "type": "string",
          "example": "Acompanhamento"
        }
      },
      "xml": {
        "name": "AddItem"
      }
    },
    "AddOrder": {
      "type": "object",
      "properties": {
        "cliente": {
          "type": "string",
          "example": "Julia"
        },
        "data": {
          "type": "string",
          "example": "2020/09/05"
        },
        "flagDelivered": {
          "type": "boolean",
          "example": false
        },
        "hora": {
          "type": "string",
          "example": "2020/09/05 17:45:01"
        },
        "horaInicial": {
          "type": "string",
          "example": "2020/09/05 17:03:05"
        },
        "mesa": {
          "type": "number",
          "example": 10
        },
        "status": {
          "type": "string",
          "example": "Em andamento"
        },
        "total": {
          "type": "number",
          "example": 30
        },
        "garcomId": {
          "type": "number",
          "example": 2
        }
      },
      "xml": {
        "name": "AddOrder"
      }
    },
    "AddItemCount": {
      "type": "object",
      "properties": {
        "count": {
          "type": "number",
          "example": 2
        },
        "menuId": {
          "type": "number",
          "example": 1
        },
        "orderId": {
          "type": "number",
          "example": 3
        }
      },
      "xml": {
        "name": "AddItemCount"
      }
    }
  }
